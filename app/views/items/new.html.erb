<h3>Adding New Item to Root</h3>

<%= form_for(:item, url: items_path, html: {id: "add-root-item-form"}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>

  <%= f.label :body %>
  <%= f.text_field :body, required: true %>

  <%= f.label :task, 'Set as task?' %>
  <%= f.check_box :task %>
  
  <%= hidden_field_tag 'item[parent_id]', params[:parent_id] %>

  <div class = "newFormOptions">
    <%= f.submit "Confirm item" %>
    <%= link_to "Clear", '#', id: "add-root-item-clear" %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>