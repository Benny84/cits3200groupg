<h3>Editing Item</h3>

<%= form_for(@item, html: {id: "add-root-item-form"}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.label :task, 'Enable Complete/Incomplete status?' %>
  <%= f.check_box :task %>

  <%= hidden_field_tag 'item[parent_id]', @item.parent_id %>

  <div class = "newFormOptions">
    <%= f.submit "Confirm item" %>
    <%= link_to "Clear", '#', id: "add-root-item-clear" %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>