/* This file contains the global page styles mainly for show.html */
html,
body {
	background-image: url(<%= asset_path 'back.png' %>);
	background-repeat: repeat-x;
	margin: 0;
	padding: 0;
	height: 100%;
	font-family: Arial;
	font-size: 12px;
}

#container {
	width: 1000px;
	margin-left: auto;
	margin-right: auto;
}

/* css for header */
header {
	background-image: url(<%=asset_path "back.png"%>);
	background-repeat: repeat-x;
	height: 85px;
	padding-left: 20px;
	overflow: hidden;
}

#indexTitleDiv {
	height: 70px;
	padding-top: 10px;
}

#itemsTitleDiv {
	float: left;
	width: 320px;
	padding-top: 10px;
}

#title1 {
	font-weight: 700; 
	font-size: 300%; 
	letter-spacing: -2px; 
	margin-top: 0px; 
	color: #FFFFFF;
}

#title2 {
	font-weight: 200; 
	font-size: 220%; 
	letter-spacing: -2px; 
	margin-top: -45px; 
	margin-left: 100px;
	color: #000000;
}

/* css for content formatting */
#main {
	padding-left: 18px;
	padding-top: 5px;
	padding-bottom: 20px;
	background: #FFFFFF;
	overflow: auto;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#contentPane {
	text-align: left; 
	width: 740px; 
	margin-left: 180px; 
	padding-left: 40px; 
	border-left: 1px solid;
}

#hierachyDiv {
	float: left;
	margin-top: 18px;
	padding-right: 15px;
	width: 165px;
	border-right: 1px solid;
}

#logoutTab {
	height: 30px; 
	width: 84px; 
	background: #FFFFFF; 
	margin-top: 55px;
	margin-left: 865px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#logout {
	font-size: 14px;
	padding-top: 5px;
	padding-left: 15px;
}

/* log in form formatting */

#centerDiv {
	width: 400px;
	height: 300px;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

#loginTab {
	width: 280px;
	margin: auto;
	background: #FFFFFF;
	padding-top: 10px;
	padding-bottom: 17px;
	text-align: center;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#session_email {
	margin-left: 40px;
}

#session_password {
	margin-left: 15px;
}

/* css formating for the hierachy */

ul {
	margin-left: -30px;
	list-style-type: circle;
}

.indent { /* unused - set to delete if we don't get around to it */
	list-style-type: none;
}

.currentItemPath { /* unused - set to delete if we don't get around to it */
	list-style-type: disc;
}

/* css for main content pain and forms */

h1 {
	font-weight: 700; 
	font-size: 220%; 
	margin-top: -5px;
}

h2 {
	font-weight: 700; 
	font-size: 160%; 
	color: #0000FF;
}

.currentItemChildren {
	margin-left: 30px;
}

.emailReminder {
	color: red;
}

#itemToRoot, #currentItemOptions, #newEmail {
	font-size: 14px;
	text-align: right;
}

#itemToRoot {
	margin-top: 0px;
}

.itemCheckbox {
	margin-left: -24px;
	margin-right: 11px;
}

/* css for option links */

.edit {
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "edit.png"%>) bottom;
	text-indent: -99999px;
}

.itemEdit {
	margin-left: 32px;
}

.emailEdit {
	margin-left: 3px;
}

.edit:hover {
	background-position: 0 0;
}

.set-email {
	margin-top: -25px;
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "email.png"%>) bottom;
	text-indent: -99999px;
}

.set-email:hover {
	background-position: 0 0;
}

.delete {
	margin-top: -24px;
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "delete.png"%>) bottom;
	text-indent: -99999px;
}

.itemDelete {
	margin-left: 60px;
}

.emailDelete {
	margin-left: 28px;
}
	
.delete:hover {
	background-position: 0 0;
}

.itemOptions {
	opacity: 0;
	
	-webkit-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	-moz-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	-o-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	
	float: right;
	position: relative;
	background: #F0F0F0;
	padding-top: 1px;
	padding-left: 1px;
	margin-top: -44px; /* this margin will affect all the items children */
	width: 86px;
	height: 27px;
	z-index: 1;
	
	border: 1px solid;
	border-bottom-left-radius: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
	box-shadow: rgb(0, 0, 0) 1px 1px 2px 0px;
}

h1 + .itemOptions {
	margin-top: -48px; /* this margin will affect only the current item */
}

h1:hover + .itemOptions, h2:hover + .itemOptions, .itemOptions:hover{
	opacity: 1;
}

h1:hover {
	text-decoration: underline;
} 

h2:hover {
	text-decoration: underline;
}

.emailOptions {
	opacity: 0;
	
	-webkit-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	-moz-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	-o-transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	transition: visibility 0s linear 0.5s,opacity 0.5s linear;
	
	float: right;
	position: relative;
	margin-top: -37px;
	background: #F0F0F0;
	padding-top: 1px;
	padding-left: 1px;
	width: 55px;
	height: 27px;
	z-index: 1;
	
	border: 1px solid;
	border-bottom-left-radius: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
	box-shadow: rgb(0, 0, 0) 1px 1px 2px 0px;
}

p:hover + .emailOptions {
	opacity: 1;
}

.emailOptions:hover {
	opacity: 1;
}

.emailReminder:hover {
	text-decoration: underline;
}

/* css for forms */

h3 {
	text-align: center;
	font-weight: 700; 
	font-size: 220%; 
	letter-spacing: -1px; 
	margin-bottom: 10px;
	margin-left: -20px;
}

#add-item-form, #set-email-form , .formCSS {
	background: #EFF3F6; 
	padding: 15px 20px; 
	margin-right: 20px; 
	border: 1px solid;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
}

#item_title {
	width: 90%;
	margin-left: 30px;
	margin-bottom: 10px;
}

#item_body {
	width: 90%;
	height: 100px;
	margin-left: 26px;
	margin-bottom: 10px;
	resize: vertical;
	vertical-align: top;
}

.formOptions {
	width: 235px;
	margin-left: auto;
	margin-right: auto;
}

.button {
   border-top: 1px solid #96d1f8;
   background: #6abcf2;
   background: -webkit-gradient(linear, left top, left bottom, from(#368ec9), to(#6abcf2));
   background: -webkit-linear-gradient(top, #368ec9, #6abcf2);
   background: -moz-linear-gradient(top, #368ec9, #6abcf2);
   background: -ms-linear-gradient(top, #368ec9, #6abcf2);
   background: -o-linear-gradient(top, #368ec9, #6abcf2);
   padding: 5px 10px;
   -webkit-border-radius: 0px;
   -moz-border-radius: 0px;
   border-radius: 0px;
   -webkit-box-shadow: rgba(0,0,0,1) 0 1px 0;
   -moz-box-shadow: rgba(0,0,0,1) 0 1px 0;
   box-shadow: rgba(0,0,0,1) 0 1px 0;
   text-shadow: rgba(0,0,0,.4) 0 1px 0;
   color: #E3E3E3;
   font-size: 11px;
   font-family: Georgia, serif;
   text-decoration: none;
   vertical-align: middle;
   margin-right: 3px;
}

.button:hover {
   color: #FFFFFF;
}

#datepicker {
	margin-left: 47px;
}

#emailrecip {
	margin-left: 6px;
}

/* formating link hover colours */

a:link {
	color: #0000FF;
	text-decoration: none;
}

a:visited {
	color: #0000FF;
	text-decoration:none;
}

a:hover {
	color: #3399FF;
}

#logout  > a, #itemToRoot > a, #currentItemOptions > a, .newFormOptions > a, #newEmail > a {
	color: #3366FF;
	text-decoration: none;
}

#logout  > a:hover, #itemToRoot > a:hover, #currentItemOptions > a:hover , .newFormOptions > a:hover, #newEmail > a:hover {
	color: #CC66FF;
	text-decoration: underline;
}

/* css for footer */

footer {
	color: #999999;
	text-align: center;
	font-size: 11px;
}
