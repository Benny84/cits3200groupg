/* This file contains the global page styles for headers footers and menus */
html,
body {
	background-image: url(<%= asset_path 'back.png' %>);
	background-repeat: repeat-x;
	margin: 0;
	padding: 0;
	height: 100%;
	font-family: Arial;
	font-size: 12px;
}

#container {
	width: 1000px;
	margin-left: auto;
	margin-right: auto;
}

/* css for header */
header {
	background-image: url(<%=asset_path "back.png"%>);
	background-repeat: repeat-x;
	height: 85px;
	padding-left: 20px;
	overflow: hidden;
}

#indexTitleDiv {
	height: 70px;
	padding-top: 10px;
}

#itemsTitleDiv {
	float: left;
	width: 320px;
	padding-top: 10px;
}

#title1 {
	font-weight: 700; 
	font-size: 300%; 
	letter-spacing: -2px; 
	margin-top: 0px; 
	color: #FFFFFF;
}

#title2 {
	font-weight: 200; 
	font-size: 220%; 
	letter-spacing: -2px; 
	margin-top: -45px; 
	margin-left: 100px;
	color: #000000;
}

/* css for content formatting */
#main {
	padding-left: 18px;
	padding-top: 5px;
	padding-bottom: 20px;
	background: #FFFFFF;
	overflow: auto;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#centerDiv {
	width: 400px;
	height: 300px;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

#loginTab {
	width: 280px;
	margin: auto;
	background: #FFFFFF;
	padding-top: 10px;
	padding-bottom: 17px;
	text-align: center;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#logoutTab {
	height: 30px; 
	width: 84px; 
	background: #FFFFFF; 
	margin-top: 55px;
	margin-left: 865px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#logout {
	font-size: 14px;
	padding-top: 5px;
	padding-left: 15px;
}

/* css for option links */

.edit {
	margin-left: 32px;
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "edit.png"%>) bottom;
	text-indent: -99999px;
}

.edit:hover {
	background-position: 0 0;
}

.set-email {
	margin-top: -25px;
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "email.png"%>) bottom;
	text-indent: -99999px;
}

.set-email:hover {
	background-position: 0 0;
}

.delete {
	display: block;
	width: 25px;
	height: 25px;
	background: url(<%=asset_path "delete.png"%>) bottom;
	text-indent: -99999px;
}

.itemDelete {
	margin-top: -24px;
	margin-left: 60px;
}

.delete:hover {
	background-position: 0 0;
}

.itemOptions {
	display: none;

	margin-left: 20px;
	background: #F0F0F0;
	padding-top: 1px;
	padding-left: 1px;
	width: 86px;
	height: 27px;
	
	border: 1px solid;
	border-bottom-left-radius: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
	box-shadow: rgb(0, 0, 0) 1px 1px 2px 0px;
}

h1:hover + .itemOptions {
	display: block;
}

h2:hover + .itemOptions {
	display: block;
}

.itemOptions:hover {
	display: block;
}

.emailOptions {
	display: none;
	float: right;

	margin-top: -37px;
	background: #F0F0F0;
	padding-top: 1px;
	padding-left: 1px;
	width: 26px;
	height: 26px;
	
	border: 1px solid;
	border-bottom-left-radius: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
	box-shadow: rgb(0, 0, 0) 1px 1px 2px 0px;
}

p:hover + .emailOptions {
	display: block;
}
.emailOptions:hover {
	display: block;
}

/* new sessions form formatting */

#session_email {
	margin-left: 40px;
}

#session_password {
	margin-left: 15px;
}

/* css formating for the hierachy - a lot of lists */

#hierachyDiv {
	float: left;
	width: 165px;
}

ul {
	margin-left: -25px;
	list-style-type: circle;
}

.indent {
	list-style-type: none;
}

.currentItemPath {
	list-style-type: disc;
}

/* css for main content pain and forms */

#contentPane {
	text-align: left; 
	width: 740px; 
	margin-left: 180px; 
	padding-left: 40px; 
	border-left: 1px solid;
}

#currentItemChildren {
	margin-left: 30px;
}

h1 {
	font-weight: 700; 
	font-size: 220%; 
	display: inline-block;
	margin-bottom: -20px;
}

h2 {
	font-weight: 700; 
	font-size: 160%; 
	display: inline-block;
	margin-bottom: -20px;
}

.emailReminder {
	color: red;
}

#itemToRoot, #currentItemOptions {
	font-size: 14px;
	text-align: right;
}

#itemToRoot {
	margin-top: 0px;
}

#add-item-form, #add-root-item-form, #set-email-form {
	background: #EFF3F6; 
	padding: 1px 8px 1px 8px; 
	margin-top: 15px;
	margin-right: 20px; 
	border: 1px solid;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
}

#item_title {
	margin-left: 10px;
}

#item_body {
	margin-left: 6px;
}

#email-datepicker {
	margin-left: 47px;
}

#email-recip {
	margin-left: 6px;
}

.itemCheckbox {
	margin-left: -24px;
}

.inactive {
	visibility: hidden;
}

.newFormOptions {
	text-align: center; 
	font-size: 14px;
}

#rootFormTitle {
	text-align: center;
	font-weight: 200; 
	font-size: 160%; 
	letter-spacing: -1px; 
}

/* formating link hover colours */

a:link {
	color: #0000FF;
	text-decoration: none;
}

a:visited {
	color: #0000FF;
	text-decoration:none;
}

a:hover {
	color: #3399FF;
}

#logout  > a, #itemToRoot > a, #currentItemOptions > a, .newFormOptions > a {
	color: #3366FF;
	text-decoration: none;
}

#logout  > a:hover, #itemToRoot > a:hover, #currentItemOptions > a:hover , .newFormOptions > a:hover {
	color: #CC66FF;
	text-decoration: underline;
}

/* css for footer */

footer {
	color: #999999;
	text-align: center;
	font-size: 11px;
}