<div id = "loginTab">
	<% flash.each do |key, value| %>
	  <div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>

	<%= form_for(:session, url: sessions_path) do |f| %>

	  <p><label for="email">Email:</label>
	  <%= text_field_tag :email, params[:email], :required => true, :size =>20 %></p>
	  
	  <p><label for="password">Password:</label>
	  <%= password_field_tag :password, params[:password], :required => true, :size =>20 %></p>

	  <%= f.submit "Log In" %>
	<% end %>
</div>