/* This file contains the global page styles for headers footers and menus */
html,
body {
	background-image: url(<%= asset_path 'back.png' %>);
	background-repeat: repeat-x;
	margin: 0;
	padding: 0;
	height: 100%;
	font-family: Arial;
	font-size: 12px;
}

#container {
	width: 1000px;
	margin-left: auto;
	margin-right: auto;
}

/* css for header */
header {
	background-image: url(<%=asset_path "back.png"%>);
	background-repeat: repeat-x;
	height: 85px;
	padding-left: 20px;
	overflow: hidden;
}

#logoutTab {
	height: 30px; 
	width: 84px; 
	font-size: 14px;
	background: #FFFFFF; 
	margin-top: 55px;
	margin-left: 865px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

/* css for content */
#main {
	padding-left: 18px;
	padding-top: 5px;
	padding-bottom: 20px;
	background: #FFFFFF;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#title1 {
	font-weight: 700; 
	font-size: 300%; 
	letter-spacing: -2px; 
	margin-top: 0px; 
	color: #FFFFFF
}

#title2 {
	font-weight: 200; 
	font-size: 220%; 
	letter-spacing: -2px; 
	margin-top: -45px; 
	margin-left: 100px
}

#centerDiv {
	width: 400px;
	height: 300px;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

#indexTitleDiv {
	height: 70px;
	padding-top: 10px;
}

#loginTab {
	width: 280px;
	margin: auto;
	background: #FFFFFF;
	padding-top: 5px;
	padding-bottom: 15px;
	text-align: center;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	box-shadow: rgb(0, 0, 0) 1px 1px 4px 0px;
}

#email {
	margin-left: 40px;
}

#password {
	margin-left: 15px;
}

h1 {
	font-weight: 700; 
	font-size: 220%; 
}

h2 {
	font-weight: 700; 
	font-size: 160%; 
}

.add-item-forms {
	background: #EFF3F6; 
	padding: 1px 8px 1px 8px; 
	margin-top: 15px;
	margin-right: 20px; 
	border: 1px solid;
	border-bottom-left-radius: 7px;
	border-top-left-radius: 7px;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
}

/* css formating for the heirachy - a lot of lists */
ul {
	margin-left: -25px;
}

.indent {
	list-style-type: none;
}

#rootChildren {
	list-style-type: circle; 
}

/* formating link hover colours */

a:link {
	color: #0000FF;
	text-decoration: none;
}

a:visited {
	color: #0000FF;
	text-decoration:none;
}

a:hover {
	color: #33CCCC;
}

#logout  > a, #itemToRoot > a, #currentItemOptions > a {
	color: #3366FF;
	text-decoration: none;
}

#logout  > a:hover, #itemToRoot > a:hover, #currentItemOptions > a:hover {
	color: #CC66FF;
	text-decoration: underline;
}

/* css for footer */
footer {
	color: #999999;
	text-align: center;
	font-size: 11px;
}
